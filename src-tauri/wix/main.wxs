<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product
    Id="*"
    Name="StokTakipUygulamasi"
    Language="1055"
    Version="1.6.7"
    Manufacturer="Hasan Durmus"
    UpgradeCode="74ffac95-51a7-413d-a97f-816469e3f8ac">

    <Package
      InstallerVersion="500"
      InstallPrivileges="limited"
      InstallScope="perUser" />

    <Media Id="1" Cabinet="app.cab" EmbedCab="yes" />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="StokTakipUygulamasi" />
      </Directory>
    </Directory>

    <!-- ComponentGroup tanımı -->
    <Fragment>
      <DirectoryRef Id="INSTALLFOLDER">
        <ComponentGroup Id="AppComponentGroup">
          <Component Id="MainExe" Guid="3F2504E0-4F89-11D3-9A0C-0305E82C3301">
            <File Source="path\to\StokTakipUygulamasi.exe" />
          </Component>
          <Component Id="AppIcons" Guid="A1B2C3D4-E5F6-7890-1234-56789ABCDE01">
            <File Source="src-tauri\icons\32x32.png" />
            <File Source="src-tauri\icons\128x128.png" />
            <File Source="src-tauri\icons\128x128@2x.png" />
            <File Source="src-tauri\icons\icon.ico" />
            <File Source="src-tauri\icons\icon.icns" />
          </Component>
          <Component Id="MainExeShortcut" Guid="B1C2D3E4-F5A6-7890-1234-56789ABCDE02">
            <Shortcut Id="DesktopShortcut"
            Name="StokTakipUygulamasi"
            Target="[INSTALLFOLDER]StokTakipUygulamasi.exe"
            WorkingDirectory="INSTALLFOLDER"/>
            <RemoveFolder Id="DesktopFolder" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\HasanDurmus\StokTakipUygulamasi" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
          </Component>
          <!-- Eğer başka dosyaların varsa buraya ekle -->
        </ComponentGroup>
      </DirectoryRef>
    </Fragment>

    <Feature Id="MainFeature" Title="Stok Takip Uygulaması" Level="1">
      <ComponentGroupRef Id="AppComponentGroup" />
    </Feature>
  </Product>
</Wix>
